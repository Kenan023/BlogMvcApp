@model  IEnumerable<BlogMvcApp.Models.BlogModel>

@if (Model.Count() == 0)
{
    <div class="alert alert-warning">
        <h3>Kayit tapilmadi</h3>
    </div>
}
else
{
    foreach (var blog in Model)
    {
        <div class="blog">
            <h3 class="page-header">
                @blog.Basliq
            </h3>
            <p>
                <span class="glyphicon glyphicon-time"></span>
                @blog.EklenmeTarihi
            </p>
            <hr />
            <img class="img-responsive" src="http://placehold.jp/900x300.png" alt="" />
            <hr />
            <p>
                @blog.Aciklama
            </p>
            @Html.ActionLink("Daha Cox....", "Details", "Blog", new { id = @blog.Id }, new { @class = "btn btn-primary" })
        </div>
    }
}
