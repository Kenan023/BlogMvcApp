@model IEnumerable<BlogMvcApp.Models.Blog>

@{
    ViewBag.Title = "Index";
}

<h2>Blog Listi</h2>
<hr />
<p>
    @Html.ActionLink("Yeni Blog Elave et", "Create",null,new { @class="btn btn-primary"})
</p>
<hr />
@if (TempData["Blog"]!=null)
{
    var blog = (BlogMvcApp.Models.Blog)TempData["Blog"];

    <div class="alert alert-success" role="alert">
        <strong><span class="glyphicon glyphicon-ok"></span>@blog.Basliq</strong>Kayit Edildi.
    </div> 
}

<table class="table table-bordered table-hover table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Category.KategoriAdi)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Basliq)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Resm)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EklenmeTarihi)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Onay)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IlkSeyfe)
        </th>
        <th style="width:200px;"></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Category.KategoriAdi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Basliq)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Resm)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EklenmeTarihi)
            </td>
            <td>
                @if (item.Onay)
                {
                    <label class="label label-success">Onayli</label>
                }
                else
                {
                    <label class="label label-danger">Onay gozleyir</label>
                }
            </td>
            <td>
                @if (item.IlkSeyfe)
                {
                    <label class="label label-success">Ilkseyfe</label>
                }
                else
                {
                    <label class="label label-danger">Ilkseyfe Deyil</label>
                }
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id },new { @class = "btn btn-warning btn-xs" }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger btn-xs" })
            </td>
        </tr>
    }

</table>
